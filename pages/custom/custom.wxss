/**product.wxss**/
.custom{
  width: 100%;
  padding: 10px;
  box-sizing: border-box;
  overflow: hidden;
  margin-bottom: 25px;
}
.custom .li{
  width:calc(50% - 10px);
  margin: 5px;
  float: left;
}
.custom .li image{
  width: 100%;
  display: block;
}
.custom .li text{
  background: #e9e9e9;
  line-height: 20px;
  padding: 10px;
  text-align: center;
  font-size: 14px;
  display: block;
  color: #333;
}