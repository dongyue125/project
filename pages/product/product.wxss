/**product.wxss**/
.product{display: flex;padding: 0 15px;margin-left: -15px;justify-content:space-around;flex-wrap:wrap;margin-bottom: 15px}
.product .product_01{width: calc(50% - 15px);margin-left:15px;margin-top: 15px;}
.product .product_01 image{width: 100%;display: block}
.product .product_01 .product_02{width: 100%;background: #ececec;padding: 15px;box-sizing:border-box;display: block;}
.product .product_01 .product_02 rich-text{font-size: 14px;color: #000}
.product .product_01 .product_02 text{font-size: 12px;color: #444;line-height: 18px;margin-top:10px}
.product .product_01 .product_02 text:nth-of-type(1){font-size: 18px;color: #000;margin-right:5px}
