.product{
 width: 100%;
 padding: 10px;
 box-sizing: border-box;
 margin-bottom: 15px;
 overflow: hidden;
}
.product .product_01{
  width: calc(50% - 10px);
  float: left;
  margin: 5px;
}
.product .product_01 image{
  width: 100%;
  display: block
}
.product .product_01 .product_02{
  width: 100%;
  background: #ececec;
  padding: 15px;
  box-sizing:border-box;
  display: block;
}
.product .product_01 .product_02 rich-text{
  font-size: 14px;
  color: #000
}
.product .product_01 .product_02 text{
  font-size: 12px;
  color: #666;
  line-height: 14px;
  margin-top:10px
  }
