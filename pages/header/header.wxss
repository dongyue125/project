/**index.wxss**/
.fldz{width: 100%}
.fldz_01{background: #ececec;width: 100%;display: block;height: 250px;text-align: center}
.fldz_01 text{display: block}
.fldz_01 text:nth-of-type(1){font-size: 30px;padding-top:20%}
.gengduo{font-size: 14px;color: #444444;width: 90px;line-height: 35px;border:1px #000 solid;display: block;text-align: center}
.fldz_01 .gengduo{margin: auto;margin-top: 20px;}
.fldz video{width:100%;height: 235px}
.ddk{width: 100%;display: block;margin-top: 10px}
.ddk_01{width: 100%;height: 250px;background:#231816;text-align: center;color: #fff;display: block;line-height: 250px}
.ddk_02 image{width: 100%;}
.qysh{width: 100%;display: flex;flex-wrap: wrap;justify-content:space-around;}
.qysh .qysh_01{width: 50%;border: 5px #fff solid;box-sizing:border-box}
.qysh .qysh_01 image{width: 100%;}
.qysh .qysh_01 .qyes_text{width: 100%;background: #ececec;padding: 15px;box-sizing:border-box;display: block;}
.qysh .qysh_01 .qyes_text rich-text{font-size: 15px;color: #000}
.qysh .qysh_01 .qyes_text text{font-size: 12px;color: #444;line-height: 18px;display: block;}
.qysh .qysh_01 .qyes_text span{width: 50px;height: 1px;background: #999;display: block;margin:10px 0}
.qysh_02{background: #ececec;border: 5px #fff solid;box-sizing:border-box;width: 50%;position: relative;}
.qysh_02 text:nth-of-type(1){font-size: 30px;margin-top: 50%;display: block;text-align: center}
.qysh_02 .gengduo{position: absolute;bottom: 20px;right: 20px}
.qyzyzdz{width: 100%;margin-top: 15px}
.qyzyzdz image{width: 100%;}
