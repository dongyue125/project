/**product.wxss**/
.product{display: flex;padding: 0 15px;margin-left: -15px;justify-content:space-around;flex-wrap:wrap;margin-bottom: 15px}
.product .product_01{width: calc(50% - 15px);margin-left:15px;margin-top: 15px;background: #d4d4d4;padding: 30px 10px;box-sizing:border-box;text-align: center;}
.product .product_01 image{display: block;width: 110px;height: 110px;border-radius: 55px;overflow: hidden;margin: auto}
.product .product_01 text:nth-of-type(1){font-size: 18px;font-weight: bold;display: block;margin-top: 10px}
.product .product_01 text:nth-of-type(2){font-size: 13px;display: block;width: 80%;margin: auto;margin-top: 10px;}
.product .product_01 button{width: 120px;height: 35px;line-height: 35px;border-radius: 20px;background: #000;text-align: center;display: block;margin: auto;margin-top: 15px;color: #fff;font-size: 14px}
.zxtc{position: fixed;top: 0;left: 0;width: 100%;height: 100%;z-index: 99;background: rgba(0,0,0,0.9)}
.zxtc image{width: 200px;position: absolute;top: 50%;left: 50%;transform: translate(-50% , -50%)}
.zxtc text:nth-of-type(1){position: absolute;top: 20px;right: 20px;color: #fff;font-size: 18px}
.zxtc text:nth-of-type(2){position: absolute;color: #fff;font-size: 13px;text-align: center;display: block;width: 100%;top: 50%;margin-top: 110px}