/**index.wxss**/
.clearfix{
  clear: both;
}
.fldz{width: 100%;margin-bottom: 15px; }
.fldz image{width:100%;display: block;}
.ddk{width: 100%;margin-bottom: 15px}
.ddk_02 image{width: 100%;}
.qysh{display: flex;padding: 0 15px;margin-left: -15px;justify-content:space-around;flex-wrap:wrap;}
.qysh .qysh_01{width: calc(50% - 15px);margin-left:15px;margin-top: 15px;}
.qysh .qysh_01 image{width: 100%;}
.qysh .qysh_01 .qyes_text{width: 100%;background: #ececec;padding: 15px;box-sizing:border-box;display: block;}
.qysh .qysh_01 .qyes_text rich-text{font-size: 15px;color: #000;font-family: 'youyuan'}
.qysh .qysh_01 .qyes_text text{font-size: 12px;color: #444;line-height: 18px;display: block;}
.qysh .qysh_01 .qyes_text span{width: 50px;height: 1px;background: #999;display: block;margin:10px 0}
.qysh_02{background: #ececec;width: calc(50% - 15px);margin-left:15px;margin-top: 15px;position: relative;}
.qysh_02 text:nth-of-type(1){font-size: 30px;margin-top: 50%;display: block;text-align: center}
.qysh_02 .gengduo{position: absolute;bottom: 20px;right: 20px}
.qyzyzdz{width: 100%;margin-top: 15px}
.qyzyzdz image{width: 100%;}

.title{
  text-align: center;
  background: #ececec;
  padding: 30px 15px;
}
.title .h4{
  font-size: 20px;
  color: #1f1611;
  display: inline-block;
  margin-bottom: 10px;
}
.title .h6{
  font-family: "youyuan";
  font-size: 14px;
  color: #555;
  display: inline-block;
  line-height: 24px;
}

.news-product .cont{
  background-size: cover;
  background-repeat: no-repeat;
  background-position: center;
  padding: 20px 0;
}
.news-product .li{
  background: rgba(0, 0, 0, 0.5);
  color: #fff;
  text-align: center;
  padding: 15px;
  margin: 10px 0;
}
.news-product .li image{
  width: 53px;
  height: 42px;
  display: block;
  margin: 0 auto;
}
.news-product .li text{
  font-family: "youyuan";
  font-size: 13px;
  display: inline-block;
  line-height: 22px;
  margin-top: 5px;
}
.zyzdz .li .bt{
  display: inline-block;
  padding: 0 20px;
  line-height: 32px;
  background: #222;
  margin-bottom: 5px;
  font-size: 15px;
}
.hzzp {
  width: 100%;
  padding: 15px 10px;
  box-sizing: border-box;
}
.hzzp .li{
  float: left;
  width: calc(100% / 2 - 10px);
  margin: 0 5px;
}
.hzzp .li text{
  background: #e9e9e9;
  font-size: 14px;
  line-height: 20px;
  padding: 10px;
  text-align: center;
  display: block;
}
.hzzp .li image{
  width: 100%;
  display: block;
}
.btn{
  line-height: 30px;
  padding: 10px;
  width: 100%;
  background: #e9e9e9;
  text-align: center;
  color: #333;
  font-size: 15px;
}