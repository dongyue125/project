/**product.wxss**/
.consulting_bg{width: 100%;display:block}
.consulting_bg image{width: 600rpx;margin:20px auto;display: block}
.consulting_01{border-bottom: 1px #ddd solid;padding-bottom: 15px;margin-bottom: 10px}
.consulting_01 .consulting_02{overflow: hidden;margin-top: 10px;}
.consulting_01 .consulting_02 text:nth-of-type(1){display: block;width: 30px;height: 30px;line-height: 30px;background: #000;border-radius: 20px;color: #fff;text-align: center;font-size: 12px;float: left}
.consulting_01 .consulting_02 text:nth-of-type(2){float: left;width: calc(100% - 30px);padding-left: 15px;box-sizing: border-box;font-size: 13px;line-height:30px;color: #666}
.consulting_01 .consulting_02:nth-of-type(1) text:nth-of-type(2){color: #000}
.consulting form input{width: 100%;display: block;line-height: 40px;height: 40px;border:1px #ddd solid;padding-left: 15px;box-sizing: border-box;font-size: 13px;margin-top: 10px;background: #f4f4f4}
.consulting form textarea{width: 100%;display: block;line-height: 40px;height: 40px;border:1px #ddd solid;padding-left: 15px;box-sizing: border-box;font-size: 13px;margin-top: 10px;background: #f4f4f4;min-height: 150px;padding-top: 15px}
.consulting form button{width: 100%;display: block;line-height: 40px;height: 40px;background: #000;color: #fff;text-align: center;border-radius: 0;margin-top: 10px;font-size: 13px;}
.wash{margin-bottom:20px;width: 100%;}
.wash_01{width: 100%;display: block;position: relative;background: #eeeeee;margin-top:20px;height: 250px;font-size: 14px;text-align: center;}
.wash_02 image{width: 100%;display: block}
.wash_01 text:nth-of-type(1){position: absolute;top:20px;left:20px;width:30px;line-height: 30px;height: 30px;background: rgba(0,0,0,1);text-align: center;color: #fff;font-size: 16px;border-radius: 15px}
.wash_01 text:nth-of-type(2){position: absolute;top: 50%;left:50%;width: 80%;transform: translate(-50% , -50%);font-size: 18px;line-height: 1.5}
.stores_02{width: 100%;margin-top: 10px}
.stores_02 video{width:750rpx;display: block}
.xzcds{width: 150px;margin:auto;line-height: 40px;height: 40px;text-align: center;background: #000;color: #fff;font-size: 14px;margin-bottom: 20px}